<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_paper"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Biology Business"
        android:textAlignment="center"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startQuiz"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:textSize="18dp"
        android:layout_alignStart="@+id/quitApp"
        android:layout_alignEnd="@id/quitApp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="433dp"
        android:text="Start Game" />

    <Button
        android:id="@+id/highScores"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:textSize="18dp"
        android:layout_alignStart="@+id/quitApp"
        android:layout_alignEnd="@id/quitApp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="351dp"
        android:text="High Scores" />

    <Button
        android:id="@+id/soundToggle"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:layout_alignStart="@+id/quitApp"
        android:layout_alignEnd="@id/quitApp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="265dp"
        android:text="Toggle Sound"
        android:textSize="18dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/musicToggle"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:layout_alignStart="@id/quitApp"
        android:layout_alignEnd="@+id/quitApp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="186dp"
        android:text="Toggle Music"
        android:textSize="18dp" />

    <Button
        android:id="@+id/quitApp"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Quit Application" />

</RelativeLayout>